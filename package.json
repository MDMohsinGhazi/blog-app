        "format": "prettier --write .",
        "prepare": "husky"
    },
    "dependencies": {
        "next": "14.2.14",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@eslint/js": "^9.11.1",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "eslint": "^9.11.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-security": "^3.0.1",
        "husky": "^9.1.6",
        "postcss": "^8",
        "prettier": "^3.3.3",
        "pretty-quick": "^4.0.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5",
        "typescript-eslint": "^8.8.0"
    }
}
