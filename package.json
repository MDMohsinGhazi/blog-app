{
    "name": "blog-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "check-types": "tsc --pretty --noEmit",
        "check-format": "pretty-quick --staged",
        "check-lint": "eslint src/**/*.{ts,tsx,js}",
